<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/md_theme_background"
    tools:context=".restaurant.presentation.home.fragments.home.orderDetail.DetailOrderClientFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        app:layout_constraintBottom_toBottomOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TopRoundedCardView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:backgroundTint="#66FFFFFF"
            android:background="@drawable/background"
            >

            <TextView
                android:id="@+id/tvTitleClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Client"
                style="@style/BodyText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tvTitleAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Entregar en: San Antonio"
                style="@style/BodyText"
                app:layout_constraintTop_toBottomOf="@id/tvTitleClient"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tvTitleDateOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Fecha de pedido: "
                style="@style/BodyText"
                app:layout_constraintTop_toBottomOf="@id/tvTitleAddress"
                app:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/tvTitleTotalOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Total del pedido: "
                style="@style/TitleText"
                app:layout_constraintTop_toBottomOf="@id/tvTitleDateOrder"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/tvClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Elias"
                style="@style/BodyText"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="San Antonio Tehuitz"
                style="@style/BodyText"
                app:layout_constraintTop_toBottomOf="@id/tvClient"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/tvDateOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Hace 2 horas"
                style="@style/BodyText"
                app:layout_constraintTop_toBottomOf="@id/tvAddress"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <TextView
                android:id="@+id/tvTotalOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="$100"
                style="@style/TitleText"
                app:layout_constraintTop_toBottomOf="@id/tvDateOrder"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tvDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repartidor"
                style="@style/BodyText"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvTitleTotalOrder"
                app:layout_constraintStart_toStartOf="parent"
                />
            <Spinner
                android:id="@+id/spDelivery"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toBottomOf="@id/tvDelivery"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:text="Asignar repartidor"
                style="@style/PrimaryButton"
                app:layout_constraintTop_toBottomOf="@id/spDelivery"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>