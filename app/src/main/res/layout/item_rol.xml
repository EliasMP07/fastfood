<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:id="@+id/cvRol"
    app:cardElevation="4dp"
    android:backgroundTint="@color/md_theme_primary"
    android:animateLayoutChanges="true"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >
        <ImageView
            android:id="@+id/ivRol"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/description_image_rol"
            tools:src="@drawable/img_food"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/tvNameRol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text= "Repartidor"
            android:textColor="@color/md_theme_background"
            style="@style/TitleText"
            app:layout_constraintTop_toBottomOf="@id/ivRol"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>